configuration {
    modi: "drun,window,run,ssh";
    
    display-run: "run: ";
    
    display-drun: "apps: ";
    drun-display-format: "{name} ";

    display-window: "windows: ";
    display-ssh: "networks: ";

    show-icons: false;
   

    //location: ;
    //anchor: "center";
    fullscreen: false;
}

window {
    //background: #cc1c1c1c;
    background-color: @bg;
    border:           4;
    padding:          3;
}

mainbox {
    background-color: transparent;
    border:  3;
    padding: 0;
}

textbox {
    highlight:  @highlight;
    text-color: @fg;
}


entry {
    placeholder: "app name";
}

element {
  orientation: horizontal;
  children: [ element-text ];
  spacing: 5px;
}

entry, element-text {
  text-color: purple;
  background-color: rgb(0,0,0);
}

