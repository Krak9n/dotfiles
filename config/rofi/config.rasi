inputbar {
  size             : 10em;
  enabled          : true;
  padding          : 2px;
  spacing          : 4px;
  children         : [ entry ];
  border           : 0 0 2px 0 solid;
  border-color     : @bc;
  border-radius    : 2px;
  //background-color : @bg-input;
  text-color       : @fg;
  //children         : [ "textbox", "window", "mainbox" ];
}

* {

  //highlight: bold;

  //bg-input: #FF444444;
  bg: #FF444444; 
  bg-alt: #995bd5;

  bc: #995bd5;

  fg: #8f5bd5;
  fg-alt: #7d128d;
    
  highlight: #995bd5;
  background:  transparent;
  background-color: @bc;
  border-color: @bc; 

  border: 0.5;

}

